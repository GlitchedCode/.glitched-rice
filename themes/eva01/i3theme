font pango: FreeSans, Semi-Bold 10

# appearance

set $text-color #8ac14f
set $focused-text-color #e3c136 
set $indicator-color #ba390f

set $focused-border-color #8ac14f
set $unfocused-border-color #8954b0
set $urgent-border-color #e60521

set $unfocused-bg-color #3f2549
set $bg-color #6b428a
set $urgent-bg-color #e60521

# class			border		background	text	 	indicator

client.focused		$focused-border-color 	$bg-color 	   $focused-text-color     $indicator-color
client.unfocused 	$unfocused-border-color $unfocused-bg-color	   $text-color	$indicator-color
client.focused_inactive	$unfocused-border-color $unfocused-bg-color 	   $text-color 	$indicator-color
client.urgent		$urgent-border-color    $urgent-bg-color   $text-color	$indicator-color
